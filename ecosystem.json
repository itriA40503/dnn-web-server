{
  "apps" : [
    {
      "name": "dnnserver",
      "script": "./build/bin/www.js",
      "merge_logs": true,
      "out_file": "/utils/dnn.web.server.log",
      "error_file": "/utils/dnn.web.server.log",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "env": {
        "NODE_ENV": "development"
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "dnncron",
      "script": "./build/cron/cronjob.js",
      "merge_logs": true,
      "out_file": "/utils/dnn.web.cron.log",
      "error_file": "/utils/dnn.web.cron.log",
      "log_date_format": "YYYY-MM-DD HH:mm Z",

    }
  ]
}